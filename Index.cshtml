@page
@model WebApplication1.Pages.IndexModel
@{
    ViewData["Title"] = "ESAP/SEPS Ordering System";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: url('https://images.pexels.com/photos/5883857/pexels-photo-5883857.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2') no-repeat center center fixed;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .header {
            text-align: center;
            padding: 40px 0;
            background-color: rgba(49, 87, 147, 0.7);
            color: white;
            border-bottom: 4px solid rgba(42, 74, 125, 0.8);
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
            position: relative;
        }

            .header h1 {
                margin: 0;
                font-size: 3rem;
                font-weight: 700;
                letter-spacing: 1px;
            }

            .header h2 {
                margin: 10px 0 0;
                font-size: 1.2rem;
                font-weight: 400;
                letter-spacing: 0.5px;
                color: #d1e3f0;
            }

            .header::after {
                content: "";
                position: absolute;
                bottom: -8px;
                left: 50%;
                width: 60px;
                height: 4px;
                background-color: rgba(209, 227, 240, 0.8);
                transform: translateX(-50%);
                border-radius: 2px;
            }


        .roadmap {
            position: relative;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 40px 20px;
            max-width: 1200px;
            margin: 40px auto 0;
            flex-wrap: wrap; /* Allow wrapping for small screens */
        }

        .step {
            background: rgba(255, 255, 255, 0.7);
            border-radius: 12px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            text-align: center;
            padding: 30px 20px;
            width: 19%; /* Ensure 5 cards fit in one row */
            position: relative;
            transition: transform 0.3s ease-in-out;
            min-height: 250px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            color: #333; /* Darken text for readability */
        }

            .step:hover {
                transform: translateY(-10px);
            }

            .step img {
                max-width: 100px;
                margin: 0 auto 20px;
                animation: bounce 2s infinite;
            }

            .step a {
                display: block;
                margin-top: auto;
                padding: 12px 15px;
                background-color: rgba(49, 87, 147, 0.9);
                color: white;
                text-decoration: none;
                border-radius: 8px;
                font-size: 1rem;
                transition: background-color 0.3s ease;
            }

                .step a:hover {
                    background-color: rgba(42, 74, 125, 0.9);
                }

/* Responsive Styles */

@@media screen and (max-width: 1200px) {
    .step {
        width: 22%; /* Adjust width slightly for better fit */
    }
}

@@media screen and (max-width: 1024px) {
    .step {
        width: 30%; /* Adjust for medium screens */
    }
}

@@media screen and (max-width: 768px) {
    .roadmap {
        flex-direction: column;
        padding: 20px;
    }

    .step {
        width: 100%;
        margin-bottom: 20px;
    }

    .header h1 {
        font-size: 2rem;
    }

    .header h2 {
        font-size: 1rem;
    }

    .step img {
        max-width: 70px;
    }

    .step a {
        font-size: 0.9rem;
    }
}


@@media screen and (max-width: 480px) {
    .header h1 {
        font-size: 1.5rem;
    }

    .header h2 {
        font-size: 0.9rem;
    }

    .step img {
        max-width: 60px;
    }

    .step a {
        font-size: 0.8rem;
        padding: 10px 12px;
    }
}


                .progress-bar {
                        position: absolute;
                        top: -20px;
                        left: 0;
                        width: 100%;
                        height: 10px;
                        background: rgba(217, 227, 240, 0.7);
                          z-index: 1;

        }


                    .progress-bar .step-dot {
                            position: absolute;
                            width: 22px;
                            height: 22px;
                            background: rgba(49, 87, 147, 0.9);
                              border-radius: 50%;
                            top: -6px;
                            transform: translateX(-50%);

        }


                        .progress-bar .step-dot:nth-child(1) {
                                left: 12%;

        }


                        .progress-bar .step-dot:nth-child(2) {
                                left: 31%;

        }


                        .progress-bar .step-dot:nth-child(3) {
                                left: 50%;

        }


                        .progress-bar .step-dot:nth-child(4) {
                                left: 70%;

        }


                        .progress-bar .step-dot:nth-child(5) {
                                left: 88%;

        }


                .arrow {
                        position: absolute;
                        top: 50%;
                        transform: translateY(-50%);
                        font-size: 36px;
                        color: rgba(49, 87, 147, 0.9);
                          font-weight: bold;

        }


                    .arrow.left {
                            right: -10%;

        }


                    .arrow.right {
                            left: -10%;

        }


                .icon-bg {
                        position: absolute;
                        top: -40px;
                        right: -40px;
                        font-size: 100px;
                        color: rgba(0, 0, 0, 0.05);
                        animation: rotateIcon 10s linear infinite;

        }


        /* Keyframes Definitions */
                @@keyframes bounce {
                        0%, 20%, 50%, 80%, 100%

        {
                            transform: translateY(0);

        }


                    40% {
                            transform: translateY(-10px);

        }


                    60% {
                            transform: translateY(-5px);

        }


        }


                @@keyframes fadeIn {
                        from

        {
                            opacity: 0;

        }


                    to {
                            opacity: 1;

        }


        }


                @@keyframes rotateIcon {
                        from

        {
                            transform: rotate(0deg);

        }


                    to {
                            transform: rotate(360deg);

        }


        }

    </style>
</head>
<body>
    <div class="header">
        <h1>ESAP/SEPS Ordering System</h1>
        <h2>A Program of the New York State Department of Health</h2>
    </div>
    <div class="roadmap">
        <div class="progress-bar">
            <div class="step-dot"></div>
            <div class="step-dot"></div>
            <div class="step-dot"></div>
            <div class="step-dot"></div>
            <div class="step-dot"></div>

        </div>
        <div class="step">
            <i class="fas fa-user-plus icon-bg"></i>
            <img src="~/images/createaccount.png" alt="Create Account">
            <a asp-area="Identity" asp-page="/Account/Register">Create Account</a>
            <span class="arrow right">&#8594;</span>
        </div>
        <div class="step">
            <i class="fas fa-sign-in-alt icon-bg"></i>
            <img src="~/images/login.png" alt="Login">
            <a asp-area="Identity" asp-page="/Account/Login">Login</a>
            <span class="arrow right">&#8594;</span>
        </div>
        <div class="step">
            <i class="fas fa-id-card icon-bg"></i>
            <img src="~/images/registration.png" alt="ESAP/SEPS Registration">
            <a asp-area="Identity" asp-page="/Account/login">ESAP/SEP Registration</a>
            <span class="arrow right">&#8594;</span>
        </div>
        <div class="step">
            <i class="fas fa-shopping-cart icon-bg"></i>
            <img src="~/images/placeorder.png" alt="Place Order">
            <a asp-area="Identity" asp-page="/Account/login">Place Order</a>
            <span class="arrow right">&#8594;</span>
        </div>
        <div class="step">
            <i class="fas fa-shopping-cart icon-bg"></i>
            <img src="~/images/receipt.png" alt="Place Order">
            <a asp-area="Identity" asp-page="/Account/login">Receipt Confirmation</a>
            <span class="arrow right">&#8594;</span>
        </div>
    </div>
</body>
</html>